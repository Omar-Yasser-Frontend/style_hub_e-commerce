    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
